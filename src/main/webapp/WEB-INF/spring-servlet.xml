<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="com"/>

    <bean id="route" class="com.lesson2.part1.Route"> </bean>
    <bean id="step" class="com.lesson2.part1.Step"> </bean>
    <bean id="service" class="com.lesson2.part1.Service"> </bean>
    <bean id="item" class="com.lesson2.part2.Entity.Item"> </bean>
    <bean id="itemDao" class="com.lesson2.part2.ItemDAO.ItemDAO"> </bean>
    <bean id="itemService" class="com.lesson2.part2.ItemService.ItemService"> </bean>
    <bean id="itemController" class="com.lesson2.part2.ItemController.ItemController"> </bean>

    <bean id="file" class="com.lesson3.model.File" abstract="true"> </bean>
    <bean id="storage" class="com.lesson3.model.Storage" abstract="true"> </bean>
    <bean id="fileDAO" class="com.lesson3.repository.FileDAO"> </bean>
    <bean id="storageDAO" class="com.lesson3.repository.StorageDAO"> </bean>
    <bean id="fileService" class="com.lesson3.service.FileService"> </bean>
    <bean id="storageService" class="com.lesson3.service.StorageService"> </bean>

</beans>

